<h1>Sign in</h1>
<%= form_tag sessions_path do %>
    <p>
        <%= label_tag '[session][email]', 'Email' %>
        <%= text_field_tag '[session][email]', (params[:session][:email] unless params[:session].nil?) %>
    </p>
    <p>
        <%= label_tag '[session][password]', 'Password' %>
        <%= password_field_tag '[session][password]' %>
    </p>
    <%= submit_tag %>
<% end %>
